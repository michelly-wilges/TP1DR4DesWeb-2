@page
@model TP1DR4DesWeb_2.Pages.Exercicio10Model
@{
    ViewData["Title"] = "Exercício 10";
}

<h1>Cadastro de Produtos</h1>

<form method="post">
    <div>
        <label for="Nome">Nome:</label>
        <input type="text" id="Nome" name="Nome" />
    </div>

    <div>
        <label for="Preco">Preço:</label>
        <input type="number" id="Preco" name="Preco" step="0.01" />
    </div>

    <button type="submit">Cadastrar</button>
</form>

@if (Model.ProdutoCadastrado != null)
{
    <h2>Produto cadastrado: </h2>
    <p>Nome: @Model.ProdutoCadastrado.Nome</p>
    <p>Preço: R$ @Model.ProdutoCadastrado.Preco</p>
}

<style>
    .formulario {
        max-width: 400px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
    }

    .campo {
        margin-bottom: 15px; /* espaço entre os campos */
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 6px;
        box-sizing: border-box;
    }

    button {
        padding: 8px 12px;
        border: 1px solid #ccc;
        background: #f5f5f5;
        cursor: pointer;
    }
</style>
